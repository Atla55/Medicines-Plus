<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
   <ThingDef ParentName="PlantBase">
    <defName>PlantRose</defName>
    <label>rose</label>
    <description>A beautiful cultivated flower, symbolic of love and romance since ancient times. The petals are useful for making tea.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
	  <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Rose</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RosePetal</harvestedThingDef>
			<harvestYield>1</harvestYield>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.4</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>2.5</growDays>
			<lifespanDaysPerGrowDays>6</lifespanDaysPerGrowDays>
			<visualSizeRange>0.3~1.05</visualSizeRange>
    </plant>
  </ThingDef>
 </Defs>